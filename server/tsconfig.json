{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "jsx": "react-jsx", 
  },
  "include": ["src/**/*.ts", "tests", "src/broker/consumers/emailConsumer.ts", "src/services/TemplateEmailService.ts"],
  "exclude": ["node_modules", "dist"]
}
